{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2017",
    "allowJs": true,
    "paths": {
      "@/*": ["../*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"]
}
